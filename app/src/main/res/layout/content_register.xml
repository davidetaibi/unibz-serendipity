<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register"
    tools:context="com.unibz.serendipity.SignInActivity"
    >


    <!--android:background="#000000"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="Avenir Medium"
        android:textColor="#ffffff"
        android:background="@drawable/bgimg"
        android:orientation="vertical"

        >
        <EditText
            android:layout_marginTop="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textName"
            android:layout_above="@+id/textView2"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:id="@+id/textSurname"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:id="@+id/textNickname"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/textGender"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:id="@+id/textEmail"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/textCity"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession/Studies"
            android:id="@+id/textPS"
            android:fontFamily="Avenir Medium"
            android:textColor="#ffffff"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/textPass"
            android:fontFamily="Avenir Medium"
            android:password="false"
            android:textColor="#ffffff"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15dp"
            android:text="Save User"
            android:id="@+id/saveUser"
            android:fontFamily="Avenir Medium"
            android:textColor="#000000"
            android:background="@drawable/button_template_small"
            android:onClick="doReg_click" />

        <!--<ImageButton-->
